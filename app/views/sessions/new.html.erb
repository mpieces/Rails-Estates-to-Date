
<h3 class="text-center">Log In</h3>

<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">
<%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
  <div class="field form-group">
    <%= f.label :username, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="text-center">
      <%= f.submit "Log In", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<h4 class="text-center">New User? <%= link_to 'Sign up now!', new_user_path %></h3>
<br>
<h4><%= link_to 'Back', estatesales_path %></h4>
</div>
</div>
</div>