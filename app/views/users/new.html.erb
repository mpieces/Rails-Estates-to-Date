<div class="row">
  <div class="col-md-6 col-md-offset-3">

<h3 class="text-center">Create an account to add sales to favorites and receive the latest sale updates!</h3>

<%= form_for(@user, html: { class: 'form-horizontal'}) do |f| %>
  <div class="field form-group">
    <%= f.label :username, class: 'col-md-2 control-label' %>
    <%= f.text_field :username, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :password, class: 'col-md-2 control-label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :email, class: 'col-md-2 control-label' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-check">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox" value="">
    Receive email notifications about sales in my area!
    </label>
  </div>
  <div class="actions form-group text-center">
    <%= f.submit "Create account", class: 'btn btn-default' %>
  </div>
<% end %>

<h4 class="text-center">Already Registered?  <%= link_to "Log in!", login_path %></h4>
<br>
<h4 class="text-center"><%= link_to 'Back', estatesales_path %>
</div>
</div>