
<!-- Should welcome both user types -->
<% if logged_in? %>
<h1>Welcome, <%= current_user.username %>!</h1>
<% end %>

<!-- Zip code search form -->
 <div class="distance-search debug">
      <p>Search for sales in you area by zip code:</p>
      <%= form_tag("/search", method: "get") do %>
        <%= label_tag(:zip_code, "Zip Code:") %>
        <%= text_field_tag(:zip_code) %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>


<div class="sales-container debug">
  <h2>Current Sales & Auctions: </h2>
  <table>
    <thead>
      <tr>
        <td><h3><strong>Dates/Times</strong></h3></td>
        <td><h3><strong>Sale Name & Company</strong></h3></td>
        <td><h3><strong>Location</strong></h3></td>
        <td><h3><strong>Distance</strong></h3></td>
      </tr>
    </thead>
    <tbody>
      <hr>
      <% @sales.each do |sale| %>
      <tr>
        <td><%=sale.start_date%> - <%=sale.end_date%><br><%=sale.times%></td>
        <td><%= link_to sale.title, estatesale_path(sale) %><br>Lasted updated: <%=sale.updated_at%></td>
        <td><%=sale.address%><br><%=sale.city%>, <%=sale.state%>  <%=sale.zip_code%></td>
      </tr>

        <!-- <td>Listed by: sale.company.company_name </td> -->
        <!-- <td class="company"></td> -->

      <%end%>
    </tbody>
  </table>
</div>


